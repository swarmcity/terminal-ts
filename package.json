{
	"name": "@swarmcity/terminal-ts",
	"version": "0.0.0",
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"preview": "vite preview",
		"test": "npm run test:unit && npm run test:e2e",
		"test:e2e": "jest --verbose --selectProjects=dom:e2e --config=jest.config.ts",
		"test:unit": "jest --verbose --selectProjects=node:unit --config=jest.config.ts"
	},
	"dependencies": {
		"@reach/router": "^1.3.4",
		"@tailwindcss/typography": "^0.5.0",
		"classnames": "^2.3.1",
		"daisyui": "^1.24.3",
		"ethers": "^5.5.2",
		"preact": "^10.5.15",
		"teaful": "^0.10.0",
		"wagmi": "^0.1.3"
	},
	"devDependencies": {
		"@babel/preset-env": "^7.16.11",
		"@babel/preset-typescript": "^7.16.7",
		"@jest/types": "^27.5.1",
		"@preact/preset-vite": "^2.1.5",
		"@types/jest": "^27.4.1",
		"@types/reach__router": "^1.3.9",
		"autoprefixer": "^10.4.2",
		"babel-jest": "^27.5.1",
		"husky": "^7.0.4",
		"jest": "^27.5.1",
		"jest-puppeteer": "^6.1.0",
		"lint-staged": "^12.1.3",
		"postcss": "^8.4.5",
		"prettier": "^2.5.1",
		"puppeteer": "^13.5.2",
		"tailwindcss": "^3.0.15",
		"ts-node": "^10.7.0",
		"typescript": "^4.4.4",
		"vite": "^2.7.2"
	},
	"engines": {
		"node": ">=16.0.0"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,json,css,md,sol}": [
			"prettier --write",
			"git add"
		]
	}
}
